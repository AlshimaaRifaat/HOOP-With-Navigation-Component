<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".view.fragment.HomeIsolationFragment">

    <TextView
        android:id="@+id/k"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_13sdp"
        android:background="@color/colorPrimary" />

    <ImageView
        android:id="@+id/logo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/k"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:src="@drawable/logo2" />

    <ImageView
        android:id="@+id/dash"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_5sdp"
        android:layout_below="@+id/logo2"
        android:layout_marginTop="@dimen/_8sdp"
        android:src="@drawable/dash_drawable" />

    <androidx.recyclerview.widget.RecyclerView
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_below="@+id/dash"
        android:layout_marginTop="@dimen/_8sdp"
        android:id="@+id/home_isolation_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>